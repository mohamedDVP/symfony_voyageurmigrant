{% extends 'base.html.twig' %}

{% block title %}Accueil - Blog de voyages
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Posts récents par catégorie</h1>

		{% for post in posts %}
			<div class="card mb-4">
				<div class="card-body">
					<h3 class="card-title">
						<a href="{{ path('app_post_show', {'slug': post.slug}) }}">
							{{ post.title }}
						</a>
					</h3>

					<p class="text-muted">
						Publié le
						{{ post.createdAt|date('d/m/Y') }}
						par
						{{ post.author.email }}
					</p>

					<p>{{ post.content|slice(0, 200) ~ '...' }}</p>

					<div>
						{% for category in post.categories %}
							<span class="badge bg-primary">{{ category.name }}</span>
						{% endfor %}
					</div>
				</div>
			</div>
		{% else %}
			<p>Aucun post disponible pour le moment.</p>
		{% endfor %}
	</div>
{% endblock %}

